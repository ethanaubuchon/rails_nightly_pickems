<h1>Picks</h1>

<%= render partial: "shared/datepicker", locals: {day: @day, path: @path} %>

<table class="table">
  <thread>
    <tr>
      <th>
        Game
      </th>
      <% @users.each do |user| %>
        <th><%= user.displayname %>'s Pick</th>
      <% end %>
    </tr>
  </thread>

  <tbody>
  <% @data.each do |row| %>
    <tr>
      <td><%= row["game"] %></td>
      <% @users.each do |user| %>
        <td><%= row[user.email] %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>