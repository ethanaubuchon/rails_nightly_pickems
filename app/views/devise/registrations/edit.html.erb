<div class="center focus-box signin-box">
  <h1>Edit Account</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table class="center">
      <tr>
        <td><%= f.email_field :email, autofocus: true, placeholder: "Email" %></td>
      </tr>
      <tr>
        <td><%= f.text_field :displayname, placeholder: "Display Name" %></td>
      </tr>
      <tr>
        <td><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></td>
      </tr>
      <tr>
        <td><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %></td>
      </tr>
      <tr>
        <td><%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password" %></td>
      </tr>
      <tr><td><hr/></td></tr>
      <tr>
        <td><%= f.submit "Sign Up" %></td>
      </tr>
    </table>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

